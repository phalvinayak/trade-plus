//*************************MOON CYCLE*******************************
normalize(_v) =>
    x = _v
    x := x - math.floor(x)
    if x < 0
        x := x + 1
    x

calcPhase(_year, _month, _day) =>
    int y = na
    int m = na
    float k1 = na 
    float k2 = na 
    float k3 = na
    float jd = na
    float ip = na

    y := _year - math.floor((12 - _month) / 10)       
    m := _month + 9
    if m >= 12 
        m := m - 12
    
    k1 := math.floor(365.25 * (y + 4712))
    k2 := math.floor(30.6 * m + 0.5)
    k3 := math.floor(math.floor((y / 100) + 49) * 0.75) - 38
    
    jd := k1 + k2 + _day + 59
    if jd > 2299160
        jd := jd - k3
    
    ip := normalize((jd - 2451550.1) / 29.530588853)
    age = ip * 29.53

